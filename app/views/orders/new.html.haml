.row
  .col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-3
    %center.row
      %h1 Новый заказ
    .row
      - if alert 
        %center.row
          %p.alert.alert-danger= alert
      .col-xs-12.col-lg-8.col-lg-offset-2
        = simple_form_for @order, html: { class: 'form-horizontal' } do |f|
          = f.input :count,
            as: :select,
            collection: [3,5],
            selected: @order.count || 5
          = f.simple_fields_for :customer do |ff|
            = ff.input :name
            = ff.input :phone
            = ff.input :address
          = f.input :payment_method, as: :select,
            collection: payment_methods, selected: :first
          - if admin?
            = f.input :by_phone, input_html: { checked: true }, label: 'совершён через телефонный звонок'
          %br/
          = f.submit 'ЗАКАЗАТЬ', class: 'btn btn-lg btn-primary'
