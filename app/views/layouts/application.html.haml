!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0")
    %meta(name="theme-color" content="#f02618")
    %meta(name="msapplication-navbutton-color" content="#f02618")
    %meta(name="apple-mobile-web-app-status-bar-style" content="#f02618")
    %title= content_for?(:title) ? yield(:title) : 'HomeMade | Доставка наборов свежих продуктов для приготовления ужинов дома'
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = render partial: 'shared/favicon'
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"


  %body
    %header.header-app.sticky{ class: controller_name != 'landing' && 'fixed' }
      = render partial: 'shared/header'
    - unless admin? || controller_name != 'landing'
      %header.header-abs
        %a(href='tel:+7499112233')
          %i.fa.fa-fw.fa-phone
          +7 910 111 22 33

    .container-fluid#content
      .row
        = yield
    %footer.container-fluid
      = render partial: 'shared/footer'
